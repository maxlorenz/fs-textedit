<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Texteditor" Width="800" Height="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_Datei">
                <MenuItem Header="_Neu" x:Name="btnNew"/>
                <MenuItem Header="_Speichern" x:Name="btnSave"/>
                <MenuItem Header="Speichern _unter" x:Name="btnSaveAs"/>
                <MenuItem Header="Ö_ffnen" x:Name="btnOpen"/>
                <Separator/>
                <MenuItem Header="_Beenden" x:Name="btnExit"/>
            </MenuItem>
        </Menu>

        <TextBox x:Name="txtMain" Grid.Row="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>

</Window>

